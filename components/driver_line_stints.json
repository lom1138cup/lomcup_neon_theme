{
    "BlockType": "dock",
    "PaddingLeft": 12,
    "PaddingRight": 4,    
    "UseBackgroundCrop" : false,
    "Background": "#A8FF00",
    "Triggers": [
        {
            "Condition": "{IsTier2}",
            "Setters": [
                {
                    "Property": "Background",
                    "Value": "{ForegroundT2}"
                }
            ]
        }
    ],
    "Items": [
        {
            "BlockType": "text",
            "MaxWidth": 90,
            "MarginLeft": 0,
            "MarginBottom" : 0,
            "PaddingBottom" : 5,
            "Width" : 50,
            "Source": "{Item.PositionString}",
            "HorizontalAlignment": "Left",
            "VerticalAlignment": "Bottom",
            "FontName" : "{FontNameBold}",
            "FontSize" : 33,
            "Foreground" : "#000000",
            "Triggers": [
                {
                    "Condition": "{IsTier2}",
                    "Setters": [
                        {
                            "Property": "Foreground",
                            "Value": "{ForegroundAlt}"
                        }
                    ]
                }
            ],
            "TextOptions" : {
                "HorizontalAlignment" : "Center"
            }
        },
        {
            "BlockType": "stack",                    
            "HorizontalAlignment": "Right",
            "VerticalAlignment": "Bottom",
            "Items": [
                {
                    "BlockType": "text",
                    "Source": "{Item.Driver.Name}",
                    "VerticalAlignment": "Bottom",
                   "PaddingBottom" : 5,
                    "FontName" : "{FontNameDefault}",
                    "FontSize" : 33,
                    "Foreground" : "#000000",
                    "Triggers": [
                        {
                            "Condition": "{IsTier2}",
                            "Setters": [
                                {
                                    "Property": "Foreground",
                                    "Value": "{ForegroundAlt}"
                                }
                            ]
                        }
                    ],
                    "TextOptions": {
                        "HorizontalAlignment": "Right"
                    }
                }
            ]
        },
        {
            "BlockType": "stack",           
            "MarginRight": 16,
            "HorizontalAlignment": "Right",
            "VerticalAlignment": "Bottom",
            "RenderIf" : "{Item.Team.Name, Converter=EmptyObjectToFalse}",
            "Items": [
                {
                    "BlockType": "image",
                    "Source" : "images/cars/{Item.Team.LogoPath}.png",
                    "MarginLeft" : 12,
                    "Height": 65,
                    "MarginRight": 20,
                    "VerticalAlignment": "Bottom",
                    "ImageOptions": {
                        "VerticalAlignment": "Center"
                    }
                }
            ]
        }
    ]
}
