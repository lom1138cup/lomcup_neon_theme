
{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "MarginLeft":20,
        "MarginRight":20,
        "MarginBottom":20,
        "MarginTop":20,
        "Background": "{BackgroundAlt}",
        "Orientation": "Vertical",
        "Items": [
            //driver line
            {
                "BlockType": "stack",
                "HorizontalAlignment": "Left",
                "VerticalAlignment": "Center",
                "Items": [

                    //name
                    {
                        "BlockType": "text",
                        "MarginLeft": 8,
                        "Source": "{DriverInfo.Driver.Name}",
                        "HorizontalAlignment": "Left",
                        "VerticalAlignment": "Center",
                        "FontName": "{FontNameBlack}",
                        "FontSize": 56
                    },
                    
                    //flag
                    {
                        "BlockType": "image",
                        "Height": 80,
                        "MarginRight": 20,
                        "MarginLeft": 20,
                        "VerticalAlignment": "Center",
                        "ImageOptions": {
                            "Path": "{DriverInfo.Driver.Nationality.LogoPath}",
                            "VerticalAlignment": "Center"
                        }
                    }
                ]
            },
            {
                "BlockType": "stack",
                "HorizontalAlignment": "Left",
                "VerticalAlignment": "Center",
                "MarginLeft":20,
                "MarginRight":20,
                "Width": "*",
                "Items": [
                    //Win Count
                    {
                        "BlockType": "text",
                        "Foreground": "{ForegroundAlt}",
                        "MaxWidth": 600,
                        "MarginLeft": 20,
                        "Source": "Wins: {DriverInfo.DriverSeason.CountP1}",
                        "HorizontalAlignment": "Right",
                        "VerticalAlignment": "Center",
                        "FontName": "{FontNameDefault}",
                        "FontSize": 56
                    },

                    //races count
                    {
                        "BlockType": "text",
                        "MaxWidth": 600,
                        "Source": " | Races: {DriverInfo.DriverSeason.RacesCount}",
                        "Foreground": "{ForegroundAlt}",
                        "HorizontalAlignment": "Right",
                        "VerticalAlignment": "Center",
                        "FontName": "{FontNameDefault}",
                        "FontSize": 56
                    }
                ]
            },
            {
                "BlockType": "stack",
                "HorizontalAlignment": "Left",
                "VerticalAlignment": "Center",
                "MarginLeft":20,
                "MarginRight":20,
                "Width": "*",
                "Items": [
                    //Win Count
                    {
                        "BlockType": "text",
                        "Foreground": "{ForegroundAlt}",
                        "MaxWidth": 600,
                        "MarginLeft": 20,
                        "Source": "WDC Pos.: {DriverInfo.DriverSeason.Position}",
                        "HorizontalAlignment": "Center",
                        "VerticalAlignment": "Center",
                        "FontName": "{FontNameDefault}",
                        "FontSize": 56
                    },

                    //season points
                    {
                        "BlockType": "text",
                        "Source": " | WDC Points: {DriverInfo.DriverSeason.Points}",
                        "Foreground": "{ForegroundAlt}",
                        "HorizontalAlignment": "Center",
                        "VerticalAlignment": "Center",
                        "FontName": "{FontNameDefault}",
                        "FontSize": 56
                    }
                ]
            }           
        ]
    }
}
