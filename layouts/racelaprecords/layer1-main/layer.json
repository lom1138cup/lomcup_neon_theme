{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "0, 0, 0, 12",

        "Orientation": "Vertical",
        "Items": [
            //header block
            {
                "BlockType": "dock",
                "VerticalAlignment": "Center",
                "Margin": "0, 0, 0, 8",
                //"Background": "{BackgroundDefault}",
                "Padding": "42, 16, 42, 0",
                "Items": [
                    //league name
                    {
                        "BlockType": "stack",
                        "VerticalAlignment": "Center",
                        "HorizontalAlignment": "Left",
                        "Items": [
                            {
                                "BlockType": "text",
                                "Opacity" : 100,
                                "Source": "Race Lap Records",
                                "FontName": "{FontNameBlack}",
                                "FontSize": 40,
                                "VerticalAlignment": "Center"
                            },
                            {
                                "BlockType": "text",
                                "Source": " on {Season.Name} Calendar",
                                "VerticalAlignment": "Center",
                                "FontName": "{FontNameItalic}",
                                "FontSize": 30,
                                "Foreground": "{ForegroundDefault}"
                            }
                        ]
                    },

                    {
                        "Name": "leagueLogo",
                        "MarginLeft": 36,
                        "MarginRight": 0,
                        "Height": 56,
                        "BlockType": "image",
                        "HorizontalAlignment": "Right",
                        "VerticalAlignment": "Center",
                        "Source": "{Season.LeagueInfo.LeagueLogo}"
                    }
                ]
            },            

            //table
            {
                "Name": "mainTable",
                "BlockType": "table",
                "Margin": "{MarginTable}",
                "MarginRight": 0,                
                "TableOptions": {
                    "ItemsSource": "{Events.Events}",
                    "RowSpacing": 0,
                    "ColSpacing": 0,
                    "HeaderTemplate": {
                        "BlockType": "text",
                        "MarginBottom": 8,
                        "TextOptionsExtern" : "tableColumnHeader"
                    },
                    "Columns": [
                        //number
                        {
                            "Template": {
                                "BlockType": "text",
                                "Source": "{Item.Position}",
                                "HorizontalAlignment": "Center",
                                "VerticalAlignment": "Center",
                                "FontName": "{FontNameItalic}",
                                "Foreground": "#FFFFFF",
                                "FontSize": 20,
                                "PaddingLeft":24,
                                "PaddingRight":24,
                                "Background": "{BackgroundDefault}",
                                "TextOptions": {
                                    "HorizontalAlignment": "Center"
                                }
                            }
                        },

                        {
                            "Template": {
                                "BlockType": "stack",
                                "PaddingLeft": 32,
                                "PaddingRight": 32,
                                "HorizontalAlignment": "Left",
                                "VerticalAlignment": "Center",
                                "Background": "{BackgroundAlt}",
                                "Items": [
                                    //flag
                                    {
                                        "BlockType": "image",
                                        "Height": 56,
                                        "PaddingTop": 8,
                                        "PaddingBottom": 8,
                                        "VerticalAlignment": "Center",
                                        "ImageOptions": {
                                            "Path": "{Item.Track.Nation.LogoPath}",
                                            "VerticalAlignment": "Center"
                                        }
                                    }
                                ]
                            }
                        },

                        //location
                        {
                            "WidthStretch": true,
                            "Template": {
                                "BlockType": "text",
                                "PaddingLeft": 24,
                                "PaddingRight": 56,
                                "Source": "[{Item.Track.CountryName}]",
                                "HorizontalAlignment": "Center",
                                "VerticalAlignment": "Center",
                                "FontName": "{FontNameBold}",
                                "Foreground": "#FFFFFF",
                                "FontSize": 32,
                                "Background": "{BackgroundAlt}"
                            }
                        },

                        //time
                        {
                            "Template": {
                                "BlockType": "text",
                                "PaddingLeft": 40,
                                "PaddingRight": 40,
                                "Background": "{BackgroundDefault}",
                                "Source": "{Item.Track.RaceLapRecordTime}",
                                "FontSize": 24,
                                "Foreground": "#FFFFFF",
                                "TextOptions": {
                                    "HorizontalAlignment": "Center",
                                    "FontName": "{FontNameDefault}"
                                },
                                "Triggers":[
                                    {
                                        "Condition": "{Item.Track.RaceLapRecordTime, Converter=StringEquals, Parameter=0.000}",
                                        "Setters":[{
                                            "Property": "Source",
                                            "Value": "UNAVAILABLE",
                                        },
                                        {
                                            "Property": "Foreground",
                                            "Value": "#DB0200"
                                        }]
                                        
                                    }
                                ]
                            }
                        },
                        {
                            "Template": {
                                "BlockType": "text",
                                "PaddingLeft": 10,
                                "PaddingRight": 40,
                                "Background": "{BackgroundDefault}",
                                "Source": "{Item.Track.RaceLapRecordDriver}",
                                "FontSize": 24,
                                "Foreground": "#FFFFFF",
                                "TextOptions": {
                                    "HorizontalAlignment": "Left",
                                    "FontName": "{FontNameDefault}"
                                }
                            }
                        }
                    ]
                }
            },
            {
                "BlockType": "text",
                "Source": "Data might be inaccurate due to software",
                "HorizontalAlignment": "Center",
                "MarginTop": 10,
                "FontName": "{FontNameItalic}",
                "FontSize": 20,
                "Foreground": "{ForegroundDefault}",
                "TextAlignment": "Center"
            }
        ]
    }
}
