{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "0, 0, 0, 12",

        "Orientation": "Vertical",
        "Items": [
            //header block
            {
                "BlockType": "dock",
                "VerticalAlignment": "Center",
                "Margin": "0, 0, 0, 8",
                //"Background": "{BackgroundDefault}",
                "Padding": "42, 16, 42, 16",
                "Items": [
                    //league name
                    {
                        "BlockType": "stack",
                        "VerticalAlignment": "Center",
                        "HorizontalAlignment": "Left",
                        "Items": [
                            {
                                "BlockType": "text",
                                "Opacity" : 100,
                                "Source": "{Season.LeagueInfo.LeagueName}",
                                "FontName": "{FontNameBold}",
                                "FontSize": 40
                            },
                            {
                                "BlockType": "text",
                                "Source": " | {Season.Name}",
                                "VerticalAlignment": "Center",
                                "FontName": "{FontNameItalic}",
                                "FontSize": 30,
                                "Foreground": "{ForegroundDefault}"
                            }
                        ]
                    },

                    {
                        "Name": "leagueLogo",
                        "MarginLeft": 36,
                        "MarginRight": 0,
                        "Height": 56,
                        "BlockType": "image",
                        "HorizontalAlignment": "Right",
                        "VerticalAlignment": "Center",
                        "Source": "{Season.LeagueInfo.LeagueLogo}"
                    }
                ]
            },            

            //table
            {
                "Name": "mainTable",
                "BlockType": "table",
                "Margin": "{MarginTable}",
                "MarginRight": 0,                
                "TableOptions": {
                    "ItemsSource": "{Events.Events}",
                    "RowSpacing": 0,
                    "ColSpacing": 0,
                    "HeaderTemplate": {
                        "BlockType": "text",
                        "MarginBottom": 8,
                        "TextOptionsExtern" : "tableColumnHeader"
                    },
                    "Columns": [
                        //number
                        {
                            "Template": {
                                "BlockType": "text",
                                "Source": "{Item.Position}",
                                "HorizontalAlignment": "Center",
                                "VerticalAlignment": "Center",
                                "FontName": "{FontNameItalic}",
                                "Foreground": "#FFFFFF",
                                "FontSize": 20,
                                "Background": "{BackgroundDefault}",
                                "TextOptions": {
                                    "HorizontalAlignment": "Center"
                                }
                            }
                        },

                        {
                            "Template": {
                                "BlockType": "stack",
                                "PaddingLeft": 32,
                                "PaddingRight": 32,
                                "HorizontalAlignment": "Left",
                                "VerticalAlignment": "Center",
                                "Background": "{BackgroundAlt}",
                                "Items": [
                                    //flag
                                    {
                                        "BlockType": "image",
                                        "Height": 56,
                                        "PaddingTop": 8,
                                        "PaddingBottom": 8,
                                        "VerticalAlignment": "Center",
                                        "ImageOptions": {
                                            "Path": "{Item.Track.Nation.LogoPath}",
                                            "VerticalAlignment": "Center"
                                        }
                                    }
                                ]
                            }
                        },

                        //location
                        {
                            "WidthStretch": true,
                            "Template": {
                                "BlockType": "text",
                                "PaddingLeft": 24,
                                "PaddingRight": 56,
                                "Source": "{Item.Track.CountryName}",
                                "HorizontalAlignment": "Center",
                                "VerticalAlignment": "Center",
                                "FontName": "{FontNameBold}",
                                "Foreground": "#FFFFFF",
                                "FontSize": 32,
                                "Background": "{BackgroundAlt}"
                            }
                        },

                        //date
                        {
                            "Template": {
                                "BlockType": "text",
                                "PaddingLeft": 48,
                                "PaddingRight": 48,
                                "Background": "{BackgroundDefault}",
                                "Source": "{Item.Date, Converter=DateToDayOfMonth}.{Item.Date, Converter=DateToMonth} {Item.Date, Converter=DateToTime}",
                                "FontSize": 24,
                                "Foreground": "#FFFFFF",
                                "TextOptions": {
                                    "HorizontalAlignment": "Center",
                                    "FontName": "{FontNameDefault}"
                                }
                            }
                        }
                    ]
                }
            }
        ]
    }
}
