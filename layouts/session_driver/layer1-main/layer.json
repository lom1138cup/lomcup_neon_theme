{
  "BlockRoot": {
    "Name": "mainStack",
    "BlockType": "stack",
    "Margin": "24, 24, 24, 24",

    "Orientation": "Vertical",
    "Items": [
      //driver line
      {
        "BlockType": "stack",
        "HorizontalAlignment": "Left",
        "VerticalAlignment": "Center",
        "Items": [
          //flag
          {
            "BlockType": "image",
            "Height": 48,
            "MarginRight": 12,
            "VerticalAlignment": "Center",
            "ImageOptions": {
              "Path": "{DriverInfo.Driver.Driver.Nationality.LogoPath}",
              "VerticalAlignment": "Center"
            }
          },

          //name
          {
            "BlockType": "text",
            "MaxWidth": 600,
            "MarginLeft": 8,
            "Source": "{DriverInfo.Driver.Driver.Name}",
            "HorizontalAlignment": "Left",
            "VerticalAlignment": "Center",
            "FontName": "{FontNameDefault}",
            "FontSize": 56
          },

          //icon badges
          {
            "BlockType": "itemstack",
            "Spacing": 4,
            "MarginLeft": 6,
            "MarginTop": 4,
            "ItemStackOptions": {
              "ItemSource": "{DriverInfo.Driver.Driver.BadgeImages}",
              "Template": {
                "BlockType": "image",
                "Height": 24,
                "Source": "{Item}"
              }
            }
          },

          //text badge
          {
            "BlockType": "text",
            "MaxWidth": 400,
            "MarginLeft": 8,
            "MarginTop": 8,
            "Source": "{DriverInfo.Driver.Driver.BadgeText}",
            "HorizontalAlignment": "Left",
            "VerticalAlignment": "Top",
            "FontName": "{FontNameDefault}",
            "FontSize": 16
          }
        ]
      },
      {
        "Name" : "separator",
        "BlockType": "image",
        "MarginTop": 16,
        "MarginLeft": 4,
        "MarginRight": 4,
        "MarginBottom": 24,
        "Width": "*",
        "Source": "separator.png"
      },
      {
        "BlockType": "stack",
        "Orientation": "Vertical",
        "Items": [
          //position
          {
            "BlockType": "text",
            "FontSize": 56,
            "MarginTop": 24,
            "Foreground":"{ForegroundDefault}",
            "VerticalAlignment": "Bottom",
            "Source": "Position"
          },
          {
            "BlockType": "text",
            "Foreground": "{ForegroundAlt}",
            "FontSize": 56,
            "Source": "P{DriverInfo.Driver.PositionString}"
          },
          {
            "BlockType": "text",
            "FontSize": 56,
            "MarginTop": 24,
            "Foreground":"{ForegroundDefault}",
            "VerticalAlignment": "Bottom",
            "Source": "Gap Ahead"
          },
          {
            "BlockType": "text",
            "FontSize": 56,
            "Foreground": "{ForegroundAlt}",
            "VerticalAlignment": "Bottom",
            "Source": "{DriverInfo.Driver.IntervalRace}"
          },

          //stints
          {
            "BlockType": "text",
            "FontSize": 56,
            "MarginTop": 24,
            "Foreground":"{ForegroundDefault}",
            "VerticalAlignment": "Bottom",
            "Source": "Strategy"
          },
          {
            "BlockType": "itemstack",
            "Spacing": 4,
            "MarginLeft": -5,
            "VerticalAlignment": "Center",
            "Background": "{BackgroundDefault}",
            "ItemStackOptions": {
              "ItemSource": "{DriverInfo.Driver.Stints}",
              "Template": {
                "BlockType": "stack",
                "VerticalAlignment": "Center",
                "MarginRight": 4,
                "Spacing": 3,
                "Items": [
                  {
                    "BlockType": "image",
                    "Height": 60,
                    "VerticalAlignment": "Center",
                    "Source": "tyres_{Item.Tyres}.png"
                  },
                  {
                    "BlockType": "text",
                    "Source": "{Item.Laps}",
                    "Foreground": "{ForegroundAlt}",
                    "HorizontalAlignment": "Center",
                    "VerticalAlignment": "Center",
                    "TextOptions": {
                      "FontName": "{FontNameDefault}",
                      "FontSize": 36,
                      "HorizontalAlignment": "Center"
                    }
                  }
                ]
              }
            }
          }
        ]
      }
    ]
  }
}
