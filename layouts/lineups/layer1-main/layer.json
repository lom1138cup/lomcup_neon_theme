{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "0, 0, 0, 4",

        "Orientation": "Vertical",
        "Items": [
            //header block
            {
                "BlockType": "dock",
                "VerticalAlignment": "Center",
                "Margin": "0, 0, 0, 8",
                "Padding": "42, 24, 24, 8",
                "Items": [
                    //league name
                    {
                        "BlockType": "stack",
                        "VerticalAlignment": "Center",
                        "Orientation": "Vertical",
                        "HorizontalAlignment": "Left",
                        "Spacing": 0,
                        "Items": [
                            {
                                "BlockType": "text",
                                "Opacity": 100,
                                "Source": "{Season.LeagueInfo.LeagueName}",
                                "FontName": "{FontNameWide}",
                                "Foreground": "{ForegroundDefault}",
                                "FontSize": 28
                            },
                            {
                                "BlockType": "text",
                                "Source": "{Season.Name} | Lineups",
                                "VerticalAlignment": "Center",
                                "FontName": "{FontNameWide}",
                                "FontSize": 20,
                                "Foreground": "{ForegroundAlt}"
                            }
                        ]
                    },

                    {
                        "Name": "leagueLogo",
                        "MarginLeft":0,
                        "MarginRight": 0,
                        "PaddingRight": 0,
                        "Height": 72,
                        "BlockType": "image",
                        "HorizontalAlignment": "Right",
                        "VerticalAlignment": "Center",
                        "Source": "{Season.LeagueInfo.LeagueLogo}"
                    }
                ]
            },

            //lines
            {
                "BlockType": "itemstack",
                "Orientation": "Vertical",
                "Width": "*",
                "ItemStackOptions": {
                    "ItemSource": "{Lineups.Lineups}",
                    "Template": {
                        "BlockType": "stack",
                        "Width": "*",
                        "Height": 68,
                        "Orientation": "Horizontal",
                        "VerticalAlignment": "Center",
                        "Background": "{BackgroundDefault}",
                        "ColorizeBackground": {
                            "Enabled": true,
                            "Color": "{Item.Team.Color}",
                            "BlendPercentage": 80
                        },
                        "Triggers": [
                            {
                                "Condition": "{Item.IsNextTeam}",
                                "Setters": [
                                    {
                                        "Property": "MarginTop",
                                        "Value": 16
                                    }
                                ]
                            }
                        ],
                        "Items": [

                            //team
                            {
                                "BlockType": "stack",
                                "Width": 336,
                                "Margin": "36, 0, 0, 12",
                                "HorizontalAlignment": "Center",
                                "VerticalAlignment": "Center",
                                "Orientation": "Horizontal",
                                "Spacing": 8,
                                "RenderIf": "{Season.LineupsBasedType, Converter=StringEquals, Parameter=Teams}",
                                "Items": [
                                    //logo
                                    {
                                        "BlockType": "image",
                                        "Height": 36,
                                        "MarginRight": 0,
                                        "VerticalAlignment": "Center",
                                        "ImageOptions": {
                                            "Path": "{Item.Team.LogoPath}",
                                            "VerticalAlignment": "Center"
                                        }
                                    },

                                    //name
                                    {
                                        "BlockType": "text",
                                        "HorizontalAlignment": "Center",
                                        "VerticalAlignment": "Center",
                                        "Source": "{Item.Team.Name}",
                                        "FontSize": 28,
                                        "Foreground": "{ForegroundAlt}"
                                    }
                                ]
                            },

                            //car
                            {
                                "BlockType": "stack",
                                "Width": 560,
                                "Margin": "36, 0, 0, 12",
                                "HorizontalAlignment": "Center",
                                "VerticalAlignment": "Center",
                                "Orientation": "Horizontal",
                                "Spacing": 12,
                                "RenderIf": "{Season.LineupsBasedType, Converter=StringEquals, Parameter=Cars}",
                                "Items": [
                                    //logo
                                    {
                                        "BlockType": "image",
                                        "Height": 36,
                                        "MarginRight": 0,
                                        "VerticalAlignment": "Center",
                                        "ImageOptions": {
                                            "Path": "{Item.Car.Vendor.LogoPath}",
                                            "VerticalAlignment": "Center"
                                        }
                                    },

                                    //name
                                    {
                                        "BlockType": "text",
                                        "HorizontalAlignment": "Center",
                                        "VerticalAlignment": "Center",
                                        "Source": "{Item.Car.Name}",
                                        "FontSize": 28
                                    }
                                ]
                            },

                            //driver stack
                            {
                                "BlockType": "stack",
                                "Orientation": "Horizontal",
                                "VerticalAlignment": "Center",
                                "Items": [
                                    //driver 1
                                    {
                                        "BlockType": "dock",
                                        "Width": 580,
                                        "Items": [
                                            {
                                                "BlockType": "stack",
                                                "HorizontalAlignment": "Left",
                                                "VerticalAlignment": "Center",
                                                "Items": [

                                                    //name
                                                    {
                                                        "BlockType": "text",
                                                        "MaxWidth": 520,
                                                        "Source": "{Item.Driver.Name}",
                                                        "HorizontalAlignment": "Left",
                                                        "VerticalAlignment": "Center",
                                                        "FontName": "{FontNameBold}",
                                                        "FontSize": 40
                                                    },

                                                    //icon badges
                                                    {
                                                        "BlockType": "itemstack",
                                                        "Spacing": 4,
                                                        "MarginTop": 4,
                                                        "ItemStackOptions": {
                                                            "ItemSource": "{Item.Driver.BadgeImages}",
                                                            "Template": {
                                                                "BlockType": "image",
                                                                "Height": 24,
                                                                "Source": "{Item}"
                                                            }
                                                        }
                                                    },

                                                    //text badge
                                                    {
                                                        "BlockType": "text",
                                                        "MaxWidth": 400,
                                                        "Source": "{Item.Driver.BadgeText}",
                                                        "HorizontalAlignment": "Left",
                                                        "VerticalAlignment": "Top",
                                                        "FontName": "{FontNameDefault}",
                                                        "FontSize": 16
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                }
            }
        ]
    }
}
